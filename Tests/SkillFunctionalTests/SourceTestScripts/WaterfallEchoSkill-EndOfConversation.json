{
  "items": [
    {
      "type": "conversationUpdate",
      "role": "user"
    },
    {
      "type": "message",
      "role": "bot",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "attachmentLayout == 'list'",
        "speak == 'Welcome to the waterfall host bot'",
        "inputHint == 'acceptingInput'",
        "attachments[0].contentType == 'application/vnd.microsoft.card.adaptive'",
        "attachments[0].content.type == 'AdaptiveCard'",
        "attachments[0].content.body[0].type == 'Image'",
        "attachments[0].content.body[0].size == 'stretch'",
        "attachments[0].content.body[1].type == 'TextBlock'",
        "attachments[0].content.body[1].spacing == 'medium'",
        "attachments[0].content.body[1].size == 'medium'",
        "attachments[0].content.body[1].weight == 'bolder'",
        "attachments[0].content.body[1].text == 'Welcome to the Skill Dialog Sample!'",
        "attachments[0].content.body[1].wrap == True",
        "attachments[0].content.body[1].color == 'accent'",
        "attachments[0].content.body[2].type == 'TextBlock'",
        "attachments[0].content.body[2].text == 'This sample allows you to connect to a skill using a SkillDialog and invoke several actions.'",
        "attachments[0].content.body[2].wrap == True"
      ]
    },
    {
      "type": "message",
      "role": "bot",
      "text": "What skill would you like to call?",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'What skill would you like to call?'",
        "speak == 'What skill would you like to call?'",
        "inputHint == 'expectingInput'",
        "suggestedActions.actions[0].type == 'imBack'",
        "suggestedActions.actions[0].title == 'EchoSkillBot'",
        "suggestedActions.actions[0].value == 'EchoSkillBot'",
        "suggestedActions.actions[1].type == 'imBack'",
        "suggestedActions.actions[1].title == 'WaterfallSkillBot'",
        "suggestedActions.actions[1].value == 'WaterfallSkillBot'"
      ]
    },
    {
      "type": "message",
      "role": "user",
      "text": "EchoSkillBot"
    },
    {
      "type": "message",
      "role": "bot",
      "text": "Select an action # to send to **EchoSkillBot**.\n\nOr just type in a message and it will be forwarded to the skill as a message activity.",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'Select an action # to send to **EchoSkillBot**.\n\nOr just type in a message and it will be forwarded to the skill as a message activity.'",
        "speak == 'Select an action # to send to **EchoSkillBot**.\n\nOr just type in a message and it will be forwarded to the skill as a message activity.'",
        "inputHint == 'expectingInput'",
        "suggestedActions.actions[0].type == 'imBack'",
        "suggestedActions.actions[0].title == 'Message'",
        "suggestedActions.actions[0].value == 'Message'"
      ]
    },
    {
      "type": "message",
      "role": "user",
      "text": "Message"
    },
    {
      "type": "message",
      "role": "bot",
      "text": "Echo: Begin the Echo Skill.",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'Echo: Begin the Echo Skill.'",
        "inputHint == 'acceptingInput'"
      ]
    },
    {
      "type": "message",
      "role": "bot",
      "text": "Say \"end\" or \"stop\" and I'll end the conversation and back to the parent.",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'Say \"end\" or \"stop\" and I\\'ll end the conversation and back to the parent.'",
        "inputHint == 'acceptingInput'"
      ]
    },
    {
      "type": "message",
      "role": "user",
      "text": "Hello"
    },
    {
      "type": "message",
      "role": "bot",
      "text": "Echo: Hello",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'Echo: Hello'",
        "inputHint == 'acceptingInput'"
      ]
    },
    {
      "type": "message",
      "role": "bot",
      "text": "Say \"end\" or \"stop\" and I'll end the conversation and back to the parent.",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'Say \"end\" or \"stop\" and I\\'ll end the conversation and back to the parent.'",
        "inputHint == 'acceptingInput'"
      ]
    },
    {
      "type": "message",
      "role": "user",
      "text": "end"
    },
    {
      "type": "message",
      "role": "bot",
      "text": "Ending conversation from the skill...",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'Ending conversation from the skill...'",
        "inputHint == 'acceptingInput'"
      ]
    },
    {
      "type": "message",
      "role": "bot",
      "text": "Done with \"EchoSkillBot\". \n\n What skill would you like to call?",
      "assertions": [
        "type == 'message'",
        "from.role == 'bot'",
        "recipient.role == 'user'",
        "text == 'Done with \"EchoSkillBot\". \n\n What skill would you like to call?'",
        "speak == 'Done with \"EchoSkillBot\". \n\n What skill would you like to call?'",
        "inputHint == 'expectingInput'",
        "suggestedActions.actions[0].type == 'imBack'",
        "suggestedActions.actions[0].title == 'EchoSkillBot'",
        "suggestedActions.actions[0].value == 'EchoSkillBot'",
        "suggestedActions.actions[1].type == 'imBack'",
        "suggestedActions.actions[1].title == 'WaterfallSkillBot'",
        "suggestedActions.actions[1].value == 'WaterfallSkillBot'"
      ]
    }
  ]
}